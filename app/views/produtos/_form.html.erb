<%= form_with(model: produto) do |form| %>
  <% if produto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(produto.errors.count, "error") %> prohibited this produto from being saved:</h2>

      <ul>
        <% produto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :ean, 'EAN:', style: "display: block", for: "ean" %>
    <%= form.number_field :ean, id: "ean", class: "form-control"  %>
  </div>

  <div  class="form-group">
    <%= form.label :sku, 'SKU: ' ,style: "display: block", for: "sku" %>
    <%= form.number_field :sku, id: "sku", class: "form-control" %>
  </div>

  <div  class="form-group">
    <%= form.label :descricao, 'Descrição:' ,style: "display: block", for: "descricao" %>
    <%= form.text_field :descricao, id:"descricao", class: "form-control" %>
  </div>

  <div  class="form-group">
    <%= form.label :fabricante, style: "display: block", for: "fabricante" %>
    <%= form.text_field :fabricante, id: "fabricante", class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 text-left pt-3">
      <%= link_to "Voltar", produtos_path, class: "btn btn-secondary" %>
    </div>
    <div class="col-md-6 text-end pt-3">
      <%= form.submit "Cadastrar", class: "btn btn-success" %>
    </div>
  </div>
  
  
<% end %>
